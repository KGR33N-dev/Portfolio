---
import Layout from '~/layouts/PageLayout.astro';
import LanguageSwitcher from '~/components/LanguageSwitcher.astro';
import LanguageNotification from '~/components/LanguageNotification.astro';

import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Header from '~/components/widgets/Header.astro';

const metadata = {
  title: 'Contact - Krzysztof GÅ‚uchowski',
};
---

<Layout metadata={metadata}>
  <LanguageNotification />
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '/' },
        { text: 'About', href: '/#about' },
        { text: 'Resume', href: '/#resume' },
        { text: 'Portfolio', href: '/#porfolio' },
        { text: 'Blog', href: '/#blog' },
        { text: 'Github', href: 'https://github.com/KGR33N-dev' },
      ]}
      actions={[
        {
          text: 'Hire me',
          href: '/contact#form',
        },
      ]}
      isSticky
      showToggleTheme
    >
      <Fragment slot="extra">
        <LanguageSwitcher currentLang="en" currentPath="/contact" />
      </Fragment>
    </Header>
  </Fragment>

  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop me a message today!"
    subtitle="For quicker answers, explore my portfolio and projects. You may find the information you're looking for right there! If not, I'm delighted to help you directly."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="I typically respond within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="I'm here to help!"
    items={[
      {
        title: 'General inquiries',
        description: `Contact me for questions about my experience, availability for projects, collaboration opportunities, or general questions about my work and expertise.`,
      },
      {
        title: 'Technical consultation',
        description:
          'Reach out for questions about Python development, VR applications, AI implementation, biotechnology solutions, or technical guidance for your projects.',
      },
    ]}
  />
</Layout>
</Layout>
