---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Blog - Portfolio KGR33N',
  description: 'Blog z postami o programowaniu, GameDev i projektach',
  robots: {
    index: true,
    follow: true,
  },
};
---

<Layout metadata={metadata}>
  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-6xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
        Blog
      </h1>
      <p class="text-xl text-muted max-w-3xl mx-auto">
        Posty o programowaniu, GameDev i moich projektach
      </p>
    </div>
    
    <!-- Loading state -->
    <div id="loading" class="flex justify-center items-center py-16">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      <span class="ml-3 text-lg text-gray-600 dark:text-gray-300">
        Ładowanie postów...
      </span>
    </div>

    <!-- Error state -->
    <div id="error" class="hidden bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6 text-center">
      <p class="text-red-800 dark:text-red-200 font-medium mb-4">
        Błąd podczas ładowania postów z API
      </p>
      <button id="retry" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
        Spróbuj ponownie
      </button>
    </div>

    <!-- Posts container -->
    <div id="posts" class="hidden grid gap-6 md:gap-8"></div>
  </section>
</Layout>

<script>
  // Vanilla JavaScript - bez React
  const API_URL = 'http://localhost:8000/api/blog/';
  
  const loading = document.getElementById('loading');
  const error = document.getElementById('error');
  const posts = document.getElementById('posts');
  const retryBtn = document.getElementById('retry');
  
  async function loadPosts() {
    try {
      console.log('Ładowanie postów z:', API_URL);
      
      loading.classList.remove('hidden');
      error.classList.add('hidden');
      posts.classList.add('hidden');
      
      const response = await fetch(API_URL);
      console.log('Response status:', response.status);
      
      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      const data = await response.json();
      console.log('Dane z API:', data);
      
      if (!data.items || data.items.length === 0) {
        throw new Error('Brak postów do wyświetlenia');
      }
      
      // Renderuj posty
      posts.innerHTML = data.items.map(post => `
        <article class="bg-white dark:bg-slate-900 shadow-lg rounded-lg p-6 hover:shadow-xl transition-shadow duration-300 border border-gray-200 dark:border-gray-700">
          <header class="mb-4">
            <h2 class="text-2xl sm:text-3xl font-bold leading-tight mb-2">
              <a href="/blog/${post.slug}" class="hover:text-blue-600 dark:hover:text-blue-400 transition ease-in duration-200">
                ${post.title}
              </a>
            </h2>
            
            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
              <time datetime="${post.published_at || post.created_at}">
                ${new Date(post.published_at || post.created_at).toLocaleDateString('pl-PL', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
              
              ${post.category ? `
                <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-1 rounded-full text-xs">
                  ${post.category}
                </span>
              ` : ''}
              
              <span>autor: ${post.author}</span>
            </div>
          </header>

          ${post.excerpt ? `
            <p class="text-gray-600 dark:text-gray-300 mb-4 leading-relaxed">
              ${post.excerpt}
            </p>
          ` : ''}

          ${post.tags && post.tags.length > 0 ? `
            <div class="flex flex-wrap gap-2 mb-4">
              ${post.tags.map(tag => `
                <span class="bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300 px-2 py-1 rounded text-xs">
                  #${tag}
                </span>
              `).join('')}
            </div>
          ` : ''}

          <footer>
            <a href="/blog/${post.slug}" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors">
              Czytaj więcej
              <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </footer>
        </article>
      `).join('');
      
      // Pokaż posty
      loading.classList.add('hidden');
      posts.classList.remove('hidden');
      
    } catch (err) {
      console.error('Błąd podczas ładowania postów:', err);
      
      loading.classList.add('hidden');
      error.classList.remove('hidden');
      error.querySelector('p').textContent = err.message;
    }
  }
  
  // Retry button
  retryBtn?.addEventListener('click', loadPosts);
  
  // Load posts when page loads
  loadPosts();
</script>
