---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Blog - KGR33N Portfolio',
  description: 'Technical blog about programming, GameDev, FastAPI, Astro and Python projects.',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    type: 'website',
    title: 'Blog - KGR33N Portfolio',
    description: 'Tech articles about Python, GameDev, web development and backend design.',
  },
};
---

<Layout metadata={metadata}>
  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-6xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
        Blog
      </h1>
      <p class="text-xl text-muted max-w-3xl mx-auto">
        Articles about backend development, Python, FastAPI, Astro and GameDev. Technical content and project breakdowns.
      </p>
    </div>

    <div id="loading" class="flex justify-center items-center py-16">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      <span class="ml-3 text-lg text-gray-600 dark:text-gray-300">
        Loading posts...
      </span>
    </div>

    <div id="error" class="hidden bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6 text-center">
      <div class="text-red-600 dark:text-red-400 mb-2">
        <svg class="w-8 h-8 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </div>
      <p class="text-red-800 dark:text-red-200 font-medium mb-4">Error while loading blog posts</p>
      <button id="retry" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
        Retry
      </button>
    </div>

    <div id="posts" class="hidden grid gap-6 md:gap-8"></div>
    <div id="pagination" class="hidden flex justify-center items-center space-x-2 mt-8"></div>
  </section>
</Layout>

<script>
  const API_URL = 'http://localhost:8000/api/blog/';
  const DEFAULT_LANGUAGE = 'en';

  const loading = document.getElementById('loading');
  const error = document.getElementById('error');
  const posts = document.getElementById('posts');
  const pagination = document.getElementById('pagination');
  const retryBtn = document.getElementById('retry');

  let currentPage = 1;
  let totalPages = 1;

  function formatDate(dateString) {
    return new Date(dateString).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long', 
      day: 'numeric'
    });
  }

  async function loadPosts(page = 1) {
    try {
      loading.classList.remove('hidden');
      error.classList.add('hidden');
      posts.classList.add('hidden');
      pagination.classList.add('hidden');

      const url = new URL(API_URL);
      url.searchParams.set('page', page.toString());
      url.searchParams.set('per_page', '10');
      url.searchParams.set('language', DEFAULT_LANGUAGE);
      url.searchParams.set('published_only', 'true');

      const response = await fetch(url.toString());
      if (!response.ok) throw new Error(`HTTP ${response.status}`);

      const data = await response.json();
      currentPage = data.page || 1;
      totalPages = data.pages || 1;

      if (!data.items || data.items.length === 0) {
        throw new Error('No posts found');
      }

      posts.innerHTML = data.items.map(post => `
        <article class="bg-white dark:bg-slate-900 shadow-lg rounded-lg p-6 border border-gray-200 dark:border-gray-700">
          <header class="mb-4">
            <h2 class="text-2xl sm:text-3xl font-bold mb-2">
              <a href="/blog/${post.slug}" class="hover:text-blue-600 dark:hover:text-blue-400">
                ${post.title}
              </a>
            </h2>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              ${formatDate(post.published_at || post.created_at)} \u2014 ${post.author}
            </div>
          </header>
          <p class="text-gray-600 dark:text-gray-300 mb-4">${post.excerpt}</p>
          <a href="/blog/${post.slug}" class="text-blue-600 dark:text-blue-400 hover:underline">Read more \u2192</a>
        </article>
      `).join('');

      if (totalPages > 1) {
        pagination.innerHTML = `
          <button id="prevPage" ${currentPage === 1 ? 'disabled' : ''}>Previous</button>
          <span>Page ${currentPage} of ${totalPages}</span>
          <button id="nextPage" ${currentPage === totalPages ? 'disabled' : ''}>Next</button>
        `;
        document.getElementById('prevPage')?.addEventListener('click', () => loadPosts(currentPage - 1));
        document.getElementById('nextPage')?.addEventListener('click', () => loadPosts(currentPage + 1));
        pagination.classList.remove('hidden');
      }

      posts.classList.remove('hidden');
    } catch (err) {
      error.classList.remove('hidden');
      error.querySelector('p').textContent = `Error: ${err.message}`;
    } finally {
      loading.classList.add('hidden');
    }
  }

  retryBtn?.addEventListener('click', () => loadPosts(currentPage));
  document.addEventListener('DOMContentLoaded', () => loadPosts(1));
</script>
