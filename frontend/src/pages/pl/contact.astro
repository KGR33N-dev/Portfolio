---
import Layout from '~/layouts/PageLayout.astro';
import LanguageSwitcher from '~/components/LanguageSwitcher.astro';
import LanguageNotification from '~/components/LanguageNotification.astro';

import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Header from '~/components/widgets/Header.astro';

const metadata = {
  title: 'Kontakt - Krzysztof Głuchowski',
};
---

<Layout metadata={metadata}>
  <LanguageNotification />
  <Fragment slot="header">
    <Header
      links={[
        { text: 'O mnie', href: '/pl#about' },
        { text: 'CV', href: '/pl#resume' },
        { text: 'Portfolio', href: '/pl#porfolio' },
        { text: 'Blog', href: '/pl#blog' },
        { text: 'Github', href: 'https://github.com/KGR33N-dev' },
      ]}
      actions={[
        {
          text: 'Zatrudnij mnie',
          href: '/pl/contact#form',
        },
      ]}
      isSticky
      showToggleTheme
    >
      <Fragment slot="extra">
        <LanguageSwitcher currentLang="pl" currentPath="/pl/contact" />
      </Fragment>
    </Header>
  </Fragment>

  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontakt" title="Skontaktujmy się!" />

  <ContactUs
    id="form"
    title="Wyślij mi wiadomość już dziś!"
    subtitle="Aby uzyskać szybsze odpowiedzi, zapoznaj się z sekcją FAQ. Możesz tam znaleźć rozwiązanie, którego szukasz! Jeśli nie, nasz zespół wsparcia z przyjemnością Ci pomoże."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Imię i nazwisko',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Wiadomość',
    }}
    disclaimer={{
      label:
        'Przesyłając ten formularz kontaktowy, potwierdzasz i wyrażasz zgodę na zbieranie Twoich danych osobowych.',
    }}
    description="Zazwyczaj odpowiadam w ciągu 24 godzin roboczych."
  />

</Layout>
