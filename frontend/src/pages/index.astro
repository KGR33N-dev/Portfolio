---
import Layout from '~/layouts/PageLayout.astro';
import LanguageSwitcher from '~/components/LanguageSwitcher.astro';
import LanguageNotification from '~/components/LanguageNotification.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';
import { getBlogPermalink } from '~/utils/permalinks';
const metadata = {
  title: 'Krzysztof Głuchowski - Python Developer',
};
---

<Layout metadata={metadata}>
  <LanguageNotification />
  <Fragment slot="header">
    <Header
      links={[
        { text: 'About', href: '#about' },
        { text: 'Resume', href: '#resume' },
        { text: 'Porfolio', href: '#porfolio' },
        { text: 'Blog', href: getBlogPermalink() },
        { text: 'Github', href: 'https://github.com/KGR33N-dev' },
      ]}
      isSticky
      showToggleTheme
    >
      <Fragment slot="extra">
        <LanguageSwitcher currentLang="en" currentPath="/" />
      </Fragment>
    </Header>
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero
    id="hero"
    title="Krzysztof Głuchowski"
    tagline="Python Developer & Computer Science Student"
    actions={[{ variant: 'primary', text: 'Hire me', href: '/contact#form' }]}
  >
    <Fragment slot="subtitle">
      Hello! I'm Krzysztof Głuchowski, a passionate Python developer and Computer Science student specializing in AI. I have professional experience building scalable applications, VR solutions, and innovative biotechnology systems.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    id="about"
    columns={3}
    items={[
      {
        icon: 'tabler:brand-github',
        callToAction: {
          target: '_blank',
          text: 'GitHub',
          href: 'https://github.com/KGR33N-dev',
        },
      },
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'LinkedIn',
          href: 'https://www.linkedin.com/in/krzysztof-głuchowski/',
        },
      },
      {
        icon: 'tabler:mail',
        callToAction: {
          target: '_blank',
          text: 'Email',
          href: 'mailto:gluchowski.job@gmail.com',
        },
      },
    ]}
    image={{
      src: '~/assets/images/My-photo.jpeg',
      alt: 'Krzysztof Głuchowski Photo',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About me</h2>
      <p>
        Welcome to my development journey. As a Python developer and Computer Science student, I'm committed to building innovative solutions
        that solve real-world problems through clean, efficient code and creative thinking.
      </p>
      <br />
      <p>
        I find inspiration in emerging technologies, from AI and machine learning to VR development and IoT integration. 
        My diverse experience spans biotechnology, gaming, and web development, always with a focus on learning and adapting to new challenges.
      </p>
      <br />
      <p>Based in Warsaw, Poland. Feel free to connect and explore collaboration opportunities:</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    id="resume"
    title="Work experience"
    items={[
      {
        title:
          'Junior Python Developer <br /> <span class="font-normal">Genotic - Biotechnology Company</span> <br /> <span class="text-sm font-normal">June 2024 - December 2024</span>',
        description: `Developed and maintained advanced laboratory management systems using Django framework. <br /> Integrated IoT devices (temperature sensors) with Django-based platform. <br /> Managed Ubuntu servers and maintained e-commerce websites.`,
        icon: 'tabler:briefcase',
      },
      {
        title:
          'Unity VR Developer <br /> <span class="font-normal">EpicVR</span> <br /> <span class="text-sm font-normal">November 2023 - May 2024</span>',
        description: `Created VR applications and games using Unity engine for renowned clients including KGHM and Rockwool. <br /> Collaborated on VR port of "Contraband Police" game as part of a development team, handling interactions, physics, audio systems, and user interfaces. <br /> Independently developed complete VR application for Rockwool company. <br /> Participated in full production pipeline from concept to deployment.`,
        icon: 'tabler:briefcase',
      },
      {
        title:
          'Full Stack Developer <br /> <span class="font-normal">Kenktech Limited</span> <br /> <span class="text-sm font-normal">November 2022 - October 2023</span>',
        description: `Developed web applications for property management using Python stack. <br /> Utilized MySQL-Connector-Python and PyMySQL for database management. <br /> Implemented containerization solutions using Docker. <br /> Built responsive web interfaces and managed complex database systems.`,
        icon: 'tabler:briefcase',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    id="education"
    title="Education"
    items={[
      {
        title: `Computer Science & AI Student <br /> <span class="font-normal">Warsaw University of Economics and Human Sciences</span> <br /> <span class="text-sm font-normal">2023 - Present</span>`,
        description: `Currently pursuing studies in Computer Science with focus on Artificial Intelligence. <br /> Expanding knowledge in machine learning, data science, and advanced programming concepts.`,
        icon: 'tabler:school',
      },
      {
        title: `IT Technician <br /> <span class="font-normal">Secondary Technical School No. 1 in Siedlce</span> <br /> <span class="text-sm font-normal">2017 - 2021</span>`,
        description: `Completed technical education in Information Technology. <br /> Built strong foundation in programming, computer systems, and technical problem-solving.`,
        icon: 'tabler:certificate',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Technical Skills"
    subtitle="Discover the technical proficiencies that enable me to build innovative solutions across various domains."
    columns={3}
    defaultIcon="tabler:point-filled"
    items={[
      {
        title: 'Python Development',
        description: 'Expert in Python with extensive experience in popular libraries and frameworks.',
      },
      {
        title: 'C# Programming',
        description: 'Proficient in C# development for various applications and systems.',
      },
      {
        title: 'Unity & VR Development',
        description: 'Specialized in Unity engine for VR applications and game development.',
      },
      {
        title: 'Django Framework',
        description: 'Experienced with Django for web applications and IoT integration projects.',
      },
      {
        title: 'Database Management',
        description: 'Skilled with both SQL and NoSQL databases, including MySQL and PostgreSQL.',
      },
      {
        title: 'Web Technologies',
        description: 'Proficient in HTML, CSS, and modern web development practices.',
      },
      {
        title: 'Git & Version Control',
        description: 'Experienced with Git workflows and collaborative development practices.',
      },
      {
        title: 'Docker & DevOps',
        description: 'Knowledgeable in containerization and deployment automation.',
      },
      {
        title: 'Problem Solving',
        description: 'Strong analytical skills with creative approach to complex challenges.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    id="porfolio"
    title="Featured Projects"
    subtitle="Explore my professional development projects spanning biotechnology, VR gaming, and web applications."
    isReversed
    items={[
      {
        title: 'Description:',
        description:
          'Developed advanced laboratory management systems for AI-driven antibody design at Genotic, a biotechnology company. Integrated IoT sensors with Django platform and managed Ubuntu servers.',
      },
      {
        title: 'Technologies:',
        description:
          'Python, Django, IoT Integration, Ubuntu Server Management, Biotechnology Applications. Focused on cutting-edge AI applications in healthcare and laboratory automation.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1559757148-5c350d0d3c56?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=928&q=80',
      alt: 'Biotechnology Laboratory Management',
    }}
    callToAction={{
      target: '_blank',
      text: 'View on LinkedIn',
      icon: 'tabler:chevron-right',
      href: 'https://www.linkedin.com/in/krzysztof-głuchowski/',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Project 1: <br /><span class="text-2xl">AI-Driven Biotechnology Platform</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Description:',
        description:
          'Developed VR applications at EpicVR for major clients including KGHM and Rockwool. Collaborated on "Contraband Police" VR port with development team, while independently created complete VR application for Rockwool company. Handled all aspects from interactions and physics to audio systems.',
      },
      {
        title: 'Technologies:',
        description: `Unity Engine, C#, VR Development, Game Physics, Audio Systems, UI/UX for VR. Participated in collaborative development workflows and delivered independent solutions for high-profile clients.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1592478411213-6153e4ebc696?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'VR Game Development',
    }}
    callToAction={{
      target: '_blank',
      text: 'View on LinkedIn',
      icon: 'tabler:chevron-right',
      href: 'https://www.linkedin.com/in/krzysztof-głuchowski/',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Project 2: <br /><span class="text-2xl">VR Game Development - Contraband Police</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

    <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Description:',
        description: `Built comprehensive property management web application at Kenktech Limited. Developed full-stack solutions using Python for backend operations and database management systems.`,
      },
      {
        title: 'Technologies:',
        description: `Python, MySQL-Connector-Python, PyMySQL, Docker, Web Development. Implemented containerization for deployment and managed complex database relationships for property management workflows.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'Property Management Application',
    }}
    callToAction={{
      target: '_blank',
      text: 'View on LinkedIn',
      icon: 'tabler:chevron-right',
      href: 'https://www.linkedin.com/in/krzysztof-głuchowski/',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Project 3: <br /><span class="text-2xl">Property Management Web Application</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>
</Layout>
